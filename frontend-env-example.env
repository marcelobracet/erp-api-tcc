# Ambiente atual (development, qa, production)
REACT_APP_ENVIRONMENT=development

# URLs da API por ambiente
REACT_APP_API_URL_DEV=http://localhost:8080
REACT_APP_API_URL_QA=https://qa-api.seudominio.com
